# Configuration de la base de données PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/intervention_db?schema=public"

# Configuration pour le développement local
DEV_DATABASE_URL="postgresql://username:password@localhost:5432/intervention_dev?schema=public"

# Configuration pour les tests
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/intervention_test?schema=public"

# Configuration pour la production
PROD_DATABASE_URL="postgresql://username:password@host:5432/intervention_prod?schema=public"

# Variables d'application
NODE_ENV=development
PORT=3000

# Clés de sécurité (à générer pour la production)
JWT_SECRET=your-super-secret-jwt-key
BCRYPT_ROUNDS=12

# Configuration email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuration de stockage des fichiers
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

