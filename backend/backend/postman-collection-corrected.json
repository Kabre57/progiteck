      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data.tokens).to.have.property('accessToken');",
                  "    pm.expect(response.data.tokens).to.have.property('refreshToken');",
                  "    ",
                  "    // Store tokens",
                  "    pm.environment.set('accessToken', response.data.tokens.accessToken);",
                  "    pm.environment.set('refreshToken', response.data.tokens.refreshToken);",
                  "    pm.environment.set('currentUserId', response.data.user.id);",
                  "    pm.environment.set('currentUserRole', response.data.user.role.libelle);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
