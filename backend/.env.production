# Configuration de production pour Progitek System

# Environnement
NODE_ENV=production

# Base de données
DATABASE_URL="postgresql://progitek_user:secure_password@localhost:5432/progitek_prod?schema=public"

# JWT Secrets (À CHANGER EN PRODUCTION)
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-change-this-in-production"

# CORS Configuration
CORS_ORIGIN="https://your-frontend-domain.com"

# Redis (pour le cache et les sessions)
REDIS_URL="redis://localhost:6379"

# Email Configuration (pour les notifications)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@progitek.com"

# Logging
LOG_LEVEL="info"
LOG_FILE="/var/log/progitek/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
AUTH_RATE_LIMIT_MAX=10
API_RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/var/uploads/progitek"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Application
APP_NAME="Progitek System"
APP_VERSION="1.0.0"
PORT=3000

